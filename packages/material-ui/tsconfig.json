  "include": ["src", "../client/src/components/SectionItems/CredentialItem", "../client/src/components/SectionItems/SkillSection", "../client/src/components/SectionItems/SkillSection", "../client/src/components/Layout", "test-utils.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
